<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="com.able99.{{ name }}" 
    version="{{ version }}" 
    android-versionCode="{{ code }}" 
    ios-CFBundleVersion="{{ code }}" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
    <name>{{ name }}</name>
    <description> </description>
    <author email="{{ email }}" href="">{{ author }}</author>
    <content src="index.html" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="styleDefault" />
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="4" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="WebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />

    {% if(ios===true) %}
    <engine name="ios" spec="~4.3.1" />
    <preference name="deployment-target" value="8.0" />

    <platform name="ios">
        <config-file mode="add" parent="ITSAppUsesNonExemptEncryption" target="*-Info.plist">
            <false />
        </config-file>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/icon-60@3x.png" width="180" />
        <icon height="60" src="res/icon-60.png" width="60" />
        <icon height="120" src="res/icon-60@2x.png" width="120" />
        <icon height="76" src="res/icon-76.png" width="76" />
        <icon height="152" src="res/icon-76@2x.png" width="152" />
        <icon height="40" src="res/icon-40.png" width="40" />
        <icon height="80" src="res/icon-40@2x.png" width="80" />
        <icon height="57" src="res/icon.png" width="57" />
        <icon height="114" src="res/icon@2x.png" width="114" />
        <icon height="72" src="res/icon-72.png" width="72" />
        <icon height="144" src="res/icon-72@2x.png" width="144" />
        <icon height="29" src="res/icon-small.png" width="29" />
        <icon height="58" src="res/icon-small@2x.png" width="58" />
        <icon height="87" src="res/icon-small@3x.png" width="87" />
        <icon height="50" src="res/icon-50.png" width="50" />
        <icon height="100" src="res/icon-50@2x.png" width="100" />
        <icon height="167" src="res/icon-83.5@2x.png" width="167" />
        <splash src="res/Default@2x~universal~anyany.png" />
    </platform>
    {% endif %}

    {% if(android===true) %}
    <engine name="android" spec="~6.0.0" />
    <preference name="android-minSdkVersion" value="19" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon-48.png" />
        <icon density="mdpi" src="res/icon-48.png" />
        <icon density="hdpi" src="res/icon-144.png" />
        <icon density="xhdpi" src="res/icon-144.png" />
        <icon density="xxhdpi" src="res/icon-144.png" />
        <icon density="xxxhdpi" src="res/icon-144.png" />
        <splash density="port-hdpi" src="res/screen.png" />
        <splash density="port-ldpi" src="res/screen.png" />
        <splash density="port-mdpi" src="res/screen.png" />
        <splash density="port-xhdpi" src="res/screen.png" />
        <preference name="LoadUrlTimeoutValue" value="90000" />
    </platform>
    {% endif %}
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="https://github.com/apache/cordova-plugin-statusbar.git" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
</widget>
